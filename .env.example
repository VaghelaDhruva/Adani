# Database
DATABASE_URL=postgresql://user:password@localhost:5432/clinker_opt

# JWT Auth
JWT_SECRET_KEY=change-me-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Routing APIs
ROUTING_PROVIDER=auto
OSRM_BASE_URL=https://router.project-osrm.org
ORS_BASE_URL=https://api.openrouteservice.org
ORS_API_KEY=your-ors-api-key
ROUTING_TIMEOUT_SECONDS=10
ROUTING_MAX_RETRIES=3

# Demand Streaming
DEMAND_SOURCE_TYPE=rest
DEMAND_POLL_URL=https://api.example.com/demand
DEMAND_POLL_INTERVAL_SECONDS=300

# Kafka (optional)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_DEMAND_TOPIC=clinker_demand
KAFKA_GROUP_ID=clinker-consumer

# Celery (async jobs)
BROKER_URL=redis://localhost:6379/0
RESULT_BACKEND=redis://localhost:6379/0

# Solver
DEFAULT_SOLVER=cbc
SOLVER_TIME_LIMIT_SECONDS=600
SOLVER_MIP_GAP=0.01

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# App
DEBUG=false
API_V1_STR=/api/v1
PROJECT_NAME=Clinker Supply Chain Optimization
